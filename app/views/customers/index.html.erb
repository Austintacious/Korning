<!DOCTYPE html>
<html>
  <head>
    <title>Customers</title>
  </head>

  <body>
    <h1>Customers</h1>
    <table>
      <thead>
        <tr>
          <th>Account No.</th>
          <th>Website</th>
          <th>Invoice Frequency</th>
        </tr>
      </thead>
      <tbody>
        <tr>
        <% @customers.each do |customer| %>
          <td><%= customer.account_no %></td>
          <td><a href="<%= customer.website %>"><%= customer.website %></a></td>
          <td><%= customer.invoice_frequency %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </body>
</html>