<!DOCTYPE html>
<html>
  <head>
    <title>Sales</title>
  </head>

  <body>
    <h1>Sales</h1>

    <table>
      <thead>
        <tr>
          <th>Date</th>
          <th>Amount</th>
          <th>Invoice No.</th>
          <th>Units Sold</th>
          <th>Price Per Unit</th>
        </tr>
      </thead>
      <tbody>
        <% @sales.each do |sale| %>
        <tr>
          <td><%= sale.sale_date %></td>
          <td>$<%= sale.sale_amount %></td>
          <td>#<%= sale.invoice_no %></td>
          <td><%= sale.units_sold %></td>
          <td><%= sale.price_per_unit %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </body>
</html>